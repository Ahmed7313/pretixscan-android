<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="res"
            type="eu.pretix.libpretixsync.check.TicketCheckProvider.SearchResult" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout android:id="@+id/rlResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvSecret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{res.secret}" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSecret"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{res.redeemed ? @string/status_redeemed : (!res.paid ? @string/status_unpaid : @string/status_valid)}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@{res.redeemed ? @color/pretix_brand_orange : (!res.paid ? @color/pretix_brand_red : @color/pretix_brand_green)}" />

        <TextView
            android:id="@+id/tvTicketName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSecret"
            android:layout_toEndOf="@id/ivWarning"
            android:layout_toRightOf="@id/ivWarning"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{res.ticket + (res.variation != null &amp;&amp; !&quot;null&quot;.equals(res.variation) ? &quot; - &quot; + res.variation : &quot;&quot;)}"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/ivWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSecret"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription=""
            android:visibility="@{res.requireAttention ? View.VISIBLE : View.GONE}"
            app:srcCompat="@drawable/ic_warning_red_24dp" />

        <TextView
            android:id="@+id/tvOrderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTicketName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{res.orderCode}"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvAttendeeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTicketName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/tvOrderCode"
            android:layout_toRightOf="@id/tvOrderCode"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{res.attendee_name != null &amp;&amp; !&quot;null&quot;.equals(res.attendee_name) ? res.attendee_name : &quot;&quot;}"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</layout>